<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:ER_Diagram_Modeler.Views.Canvas.Connection">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="LineMoveThumb.xaml"></ResourceDictionary>
	</ResourceDictionary.MergedDictionaries>

	<Style x:Key="LineItemStyle" TargetType="{x:Type local:LineContent}">
		<Setter Property="SnapsToDevicePixels" Value="True"></Setter>
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="{x:Type local:LineContent}">
					<Grid DataContext="{Binding RelativeSource={RelativeSource TemplatedParent}}">
						<local:ConnectionLineThumb Template="{StaticResource LineMoveThumbTemplate}" x:Name="MoveThumb"></local:ConnectionLineThumb>
						<ContentPresenter Content="{TemplateBinding ContentControl.Content}" Margin="{TemplateBinding Padding}" x:Name="ContentPresenter"></ContentPresenter>
					</Grid>
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
</ResourceDictionary>